{
  "extends": [
    "config:base",
    ":dependencyDashboardApproval",
    "dependencyDashboardApproval": true,
    "dependencyDashboardAutoclose": true,
    "enabledManagers": ["npm"],
  ],
  "schedule": [
    "every sunday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^npm"],
      "groupName": ["NPM Update"],
      "assignees": ["TheKingTermux", "Renovate[bot]"],
      "label": ["Bot Update", "dependencies", "Auto Updated"],
    }
  ]
}
