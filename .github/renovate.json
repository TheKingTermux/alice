{
  "extends": [
    "config:base",
    ":assignee(renovate[bot])",
    ":reviewer(TheKingTermux)",
  ],
  "rebaseWhen": [
    "behind-base-branch"  
  ],
  "prCreation": [
    "immediate"
  ],
  "prConcurrentLimit": 0,
  "schedule": [
    "at any time"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],   
      "matchManagers": [
        "npm"
      ],
      "matchPackagePatterns": [
        "^npm"
      ],
      "groupName": [
        "NPM Update"
      ],
      "assignees": [
        "TheKingTermux",
        "renovate[bot]"
      ],
      "labels": [
        "Bot Update",
        "dependencies",
        "Auto Updated",
        "Need Update"
      ],
      "dependencyDashboardApproval": true,
      "dependencyDashboardAutoclose": true,
      "automerge": true,
      "automergeType": "pr-comment",
      "automergeComment": "bors: r+"
    }
  ]
}
